<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_drawer">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="서랍 위에 있는 위젯입니다."
        android:textSize="16sp"
        android:background="#EA8D84"
        />
    <SlidingDrawer
        android:handle="@id/btn_handle"
        android:content="@id/linear_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/btn_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="손잡이"
            android:background="#FFC7FF"
            />
        <LinearLayout
            android:id="@+id/linear_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFF74"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서랍장 안의 위젯입니다."/>
        </LinearLayout>
    </SlidingDrawer>
</LinearLayout>